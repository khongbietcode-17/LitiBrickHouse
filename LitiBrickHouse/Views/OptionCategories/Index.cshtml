@model IEnumerable<LitiBrickHouse.Models.OptionCategory>

@{
    ViewData["Title"] = "Quản lý Danh mục";
}

<style>
    /* --- BỐ CỤC CHUNG (Giữ nguyên consistency với các trang trước) --- */
    body {
        background-color: #f8f9fa;
        font-family: 'Nunito', sans-serif;
        overflow-x: hidden;
    }

    .admin-wrapper {
        display: flex;
        min-height: 100vh;
    }

    /* SIDEBAR */
    .sidebar {
        width: 260px;
        background: #fff;
        box-shadow: 2px 0 10px rgba(0,0,0,0.05);
        padding: 20px;
        position: fixed;
        height: 100%;
        z-index: 100;
    }

    .sidebar-brand {
        font-size: 1.5rem;
        font-weight: 800;
        color: #E6007E;
        text-align: center;
        margin-bottom: 30px;
        border-bottom: 1px solid #eee;
        padding-bottom: 20px;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .nav-link {
        color: #555;
        font-weight: 600;
        padding: 12px 15px;
        border-radius: 10px;
        margin-bottom: 8px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        transition: all 0.3s;
        text-decoration: none;
    }

        .nav-link:hover {
            background-color: #ffeef7;
            color: #E6007E;
            transform: translateX(5px);
        }

        .nav-link.active {
            background-color: #E6007E;
            color: white !important;
            box-shadow: 0 4px 6px rgba(230, 0, 126, 0.3);
        }

        .nav-link i {
            width: 25px;
            font-size: 1.1rem;
        }

    /* MAIN CONTENT */
    .main-content {
        margin-left: 260px;
        padding: 30px;
        width: calc(100% - 260px);
    }

    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
    }

    .page-title {
        font-size: 1.5rem;
        font-weight: 800;
        color: #333;
    }

    /* --- STYLE RIÊNG CHO DANH MỤC (CATEGORY CARDS) --- */
    .cat-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 25px;
    }

    .cat-card {
        background: #fff;
        border-radius: 15px;
        padding: 25px;
        text-align: center;
        transition: all 0.3s ease;
        border: 1px solid #eee;
        position: relative;
        overflow: hidden;
        box-shadow: 0 4px 6px rgba(0,0,0,0.02);
    }

        /* Hiệu ứng hover nổi lên */
        .cat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(230, 0, 126, 0.1);
            border-color: #E6007E;
        }

    /* Icon đại diện cho danh mục */
    .cat-icon-wrapper {
        width: 70px;
        height: 70px;
        background-color: #ffeef7; /* Nền hồng nhạt */
        color: #E6007E;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 15px auto;
        font-size: 1.8rem;
        transition: 0.3s;
    }

    .cat-card:hover .cat-icon-wrapper {
        background-color: #E6007E;
        color: white;
        transform: scale(1.1);
    }

    .cat-name {
        font-size: 1.1rem;
        font-weight: 700;
        color: #333;
        margin-bottom: 20px;
    }

    /* Nút hành động (Edit/Delete) */
    .cat-actions {
        display: flex;
        justify-content: center;
        gap: 10px;
        padding-top: 15px;
        border-top: 1px dashed #eee;
    }

    .btn-circle {
        width: 35px;
        height: 35px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        text-decoration: none;
        transition: 0.2s;
        border: none;
    }

    .btn-edit {
        background-color: #e9ecef;
        color: #333;
    }

        .btn-edit:hover {
            background-color: #0d6efd;
            color: white;
        }

    .btn-delete {
        background-color: #ffe3e3;
        color: #dc3545;
    }

        .btn-delete:hover {
            background-color: #dc3545;
            color: white;
        }

    /* Nút thêm mới to đẹp */
    .btn-create-new {
        background-color: #E6007E;
        color: white;
        padding: 10px 25px;
        border-radius: 30px;
        font-weight: 600;
        text-decoration: none;
        box-shadow: 0 4px 10px rgba(230, 0, 126, 0.3);
        transition: 0.3s;
    }

        .btn-create-new:hover {
            background-color: #c4006b;
            color: white;
            transform: translateY(-2px);
        }

</style>

<div class="admin-wrapper">

    <div class="sidebar">
        <div class="sidebar-brand">
            <i class="fas fa-cubes"></i> Admin Panel
        </div>

        <nav class="nav flex-column">
            <a href="@Url.Action("Index", "Admin")" class="nav-link">
                <span><i class="fas fa-chart-line"></i> Dashboard</span>
            </a>

            <a href="@Url.Action("Index", "Orders")" class="nav-link">
                <span><i class="fas fa-file-invoice-dollar"></i> Đơn Hàng</span>
            </a>

            <a href="@Url.Action("Index", "CustomOptions")" class="nav-link">
                <span><i class="fas fa-box-open"></i> Phụ Kiện</span>
            </a>

            <a href="@Url.Action("Index", "OptionCategories")" class="nav-link active">
                <span><i class="fas fa-tags"></i> Danh Mục</span>
            </a>
        </nav>
    </div>

    <div class="main-content">

        <div class="page-header">
            <div>
                <h2 class="page-title">Quản Lý Danh Mục</h2>
                <p class="text-muted mb-0">Phân loại các bộ phận Lego</p>
            </div>
            <a asp-action="Create" class="btn-create-new">
                <i class="fas fa-plus me-2"></i> Tạo Danh Mục Mới
            </a>
        </div>

        <div class="cat-grid">
            @foreach (var item in Model)
            {
                <div class="cat-card">
                    <div class="cat-icon-wrapper">
                        @if (item.Name.Contains("Áo"))
                        {
                            <i class="fas fa-tshirt"></i>
                        }
                        else if (item.Name.Contains("Quần"))
                        {

                            <i class="fas fa-socks"></i>
                        }
                        else if (item.Name.Contains("Tóc"))
                        {

                            <i class="fas fa-cut"></i>
                        }
                        else if (item.Name.Contains("Mặt"))
                        {

                            <i class="fas fa-smile"></i>
                        }
                        else if (item.Name.Contains("Cầu thủ"))
                        {

                            <i class="fas fa-running"></i>
                        }
                        else if (item.Name.Contains("Background"))
                        {

                            <i class="fas fa-image"></i>
                        }
                        else
                        {

                            <i class="fas fa-tag"></i>
                        }
                    </div>

                    <div class="cat-name">@item.Name</div>

                    <div class="cat-actions">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn-circle btn-edit" title="Chỉnh sửa">
                            <i class="fas fa-pen"></i>
                        </a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn-circle btn-edit" title="Chi tiết" style="background-color: #e3f2fd; color: #0d6efd;">
                            <i class="fas fa-info"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn-circle btn-delete" title="Xóa">
                            <i class="fas fa-trash"></i>
                        </a>
                    </div>
                </div>
            }
        </div>

    </div>
</div>