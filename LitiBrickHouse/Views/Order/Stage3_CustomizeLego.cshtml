@model LitiBrickHouse.ViewModels.OrderBuilderViewModel
@using LitiBrickHouse.Models
@using LitiBrickHouse.Enums
@{
    ViewData["Title"] = "Giai đoạn 3: Tùy chỉnh Lego";
    // Lấy tất cả các bộ phận từ ViewBag
    var hairs = ViewBag.AvailableHairs as List<CustomOption>;
    var faces = ViewBag.AvailableFaces as List<CustomOption>;
    var clothes = ViewBag.AvailableClothes as List<CustomOption>;
    var pants = ViewBag.AvailablePants as List<CustomOption>;
    var accessories = ViewBag.AvailableAccessories as List<CustomOption>;
}

<div class="container stage3-container">
    <div class="row justify-content-center">
        <div class="col-lg-10 text-center">

            <h1 class="stage3-title">Giai đoạn 3: Chọn Lego</h1>

            <form asp-action="Stage3_CustomizeLego" method="post">

                <div class="stage3-main-card">
                    <div class="row">
                        <div class="col-lg-7">

                            <h3>LEGO 1</h3>

                            <input type="hidden" asp-for="Lego1.HairId" />
                            <input type="hidden" asp-for="Lego1.FaceId" />
                            <input type="hidden" asp-for="Lego1.ClothesId" />
                            <input type="hidden" asp-for="Lego1.PantsId" />
                            <input type="hidden" asp-for="Lego1.Accessory1Id" />
                            <input type="hidden" asp-for="Lego1.Accessory2Id" />

                            <ul class="nav nav-tabs stage3-tabs" id="lego1Tabs" role="tablist">
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link active" id="lego1-face-tab" data-bs-toggle="tab" data-bs-target="#lego1-face" type="button" role="tab">Mặt</button>
                                </li>
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link" id="lego1-hair-tab" data-bs-toggle="tab" data-bs-target="#lego1-hair" type="button" role="tab">Tóc</button>
                                </li>
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link" id="lego1-clothes-tab" data-bs-toggle="tab" data-bs-target="#lego1-clothes" type="button" role="tab">Áo</button>
                                </li>
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link" id="lego1-pants-tab" data-bs-toggle="tab" data-bs-target="#lego1-pants" type="button" role="tab">Quần</button>
                                </li>
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link" id="lego1-acc1-tab" data-bs-toggle="tab" data-bs-target="#lego1-acc1" type="button" role="tab">Phụ kiện 1</button>
                                </li>
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link" id="lego1-acc2-tab" data-bs-toggle="tab" data-bs-target="#lego1-acc2" type="button" role="tab">Phụ kiện 2</button>
                                </li>
                            </ul>

                            <div class="tab-content" id="lego1TabContent">

                                <div class="tab-pane fade show active" id="lego1-face" role="tabpanel">
                                    <div class="custom-tab-pane">
                                        <h5>Mặt nam</h5>
                                        <div class="item-grid">
                                            @if (faces != null)
                                            {
                                                @foreach (var item in faces.Where(f => f.Gender == GenderType.Male))
                                                {
                                                    <div class="grid-item" data-id="@item.Id" data-image-url="@item.ImageUrl" data-part="face">
                                                        <img src="@(item.ThumbnailUrl ?? item.ImageUrl ?? "/images/placeholder.png")" alt="@item.Name" />
                                                        <small>+@item.AdditionalPrice.ToString("N0")đ</small>
                                                    </div>
                                                }
                                            }
                                        </div>
                                    </div>
                                </div>

                                <div class="tab-pane fade" id="lego1-hair" role="tabpanel">
                                    <div class="custom-tab-pane">
                                        <h5>Tóc nam</h5>
                                        <div class="item-grid">
                                            @if (hairs != null)
                                            {
                                                @foreach (var item in hairs.Where(h => h.Gender == GenderType.Male))
                                                {
                                                    <div class="grid-item" data-id="@item.Id" data-image-url="@item.ImageUrl" data-part="hair">
                                                        <img src="@(item.ThumbnailUrl ?? item.ImageUrl ?? "/images/placeholder.png")" alt="@item.Name" />
                                                        <small>+@item.AdditionalPrice.ToString("N0")đ</small>
                                                    </div>
                                                }
                                            }
                                        </div>
                                        <h5 class="mt-3">Tóc nữ</h5>
                                        <div class="item-grid">
                                            @if (hairs != null)
                                            {
                                                @foreach (var item in hairs.Where(h => h.Gender == GenderType.Female))
                                                {
                                                    <div class="grid-item" data-id="@item.Id" data-image-url="@item.ImageUrl" data-part="hair">
                                                        <img src="@(item.ThumbnailUrl ?? item.ImageUrl ?? "/images/placeholder.png")" alt="@item.Name" />
                                                        <small>+@item.AdditionalPrice.ToString("N0")đ</small>
                                                    </div>
                                                }
                                            }
                                        </div>
                                    </div>
                                </div>

                                <div class="tab-pane fade" id="lego1-clothes" role="tabpanel">
                                    <div class="custom-tab-pane">
                                        <div class="item-grid">
                                            @if (clothes != null)
                                            {
                                                @foreach (var item in clothes)
                                                {
                                                    <div class="grid-item" data-id="@item.Id" data-image-url="@item.ImageUrl" data-part="clothes">
                                                        <img src="@(item.ThumbnailUrl ?? item.ImageUrl ?? "/images/placeholder.png")" alt="@item.Name" />
                                                        <small>+@item.AdditionalPrice.ToString("N0")đ</small>
                                                    </div>
                                                }
                                            }
                                        </div>
                                    </div>
                                </div>

                                <div class="tab-pane fade" id="lego1-pants" role="tabpanel">
                                    <div class="custom-tab-pane">
                                        <div class="item-grid">
                                            @if (pants != null)
                                            {
                                                @foreach (var item in pants)
                                                {
                                                    <div class="grid-item" data-id="@item.Id" data-image-url="@item.ImageUrl" data-part="pants">
                                                        <img src="@(item.ThumbnailUrl ?? item.ImageUrl ?? "/images/placeholder.png")" alt="@item.Name" />
                                                        <small>+@item.AdditionalPrice.ToString("N0")đ</small>
                                                    </div>
                                                }
                                            }
                                        </div>
                                    </div>
                                </div>

                                <div class="tab-pane fade" id="lego1-acc1" role="tabpanel">
                                    <div class="custom-tab-pane">
                                        <div class="item-grid">
                                            @if (accessories != null)
                                            {
                                                @foreach (var item in accessories)
                                                {
                                                    <div class="grid-item" data-id="@item.Id" data-image-url="@item.ImageUrl" data-part="accessory1">
                                                        <img src="@(item.ThumbnailUrl ?? item.ImageUrl ?? "/images/placeholder.png")" alt="@item.Name" />
                                                        <small>+@item.AdditionalPrice.ToString("N0")đ</small>
                                                    </div>
                                                }
                                            }
                                        </div>
                                    </div>
                                </div>

                                <div class="tab-pane fade" id="lego1-acc2" role="tabpanel">
                                    <div class="custom-tab-pane">
                                        <div class="item-grid">
                                            @if (accessories != null)
                                            {
                                                @foreach (var item in accessories)
                                                {
                                                    <div class="grid-item" data-id="@item.Id" data-image-url="@item.ImageUrl" data-part="accessory2">
                                                        <img src="@(item.ThumbnailUrl ?? item.ImageUrl ?? "/images/placeholder.png")" alt="@item.Name" />
                                                        <small>+@item.AdditionalPrice.ToString("N0")đ</small>
                                                    </div>
                                                }
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-5 stage3-preview-col">
                            <div class="lego-preview-container mt-4 mt-lg-0">
                                <img id="bg-preview" class="lego-preview-layer" src="/images/mannequin/preview_white.png" />
                                <img id="pants-preview" class="lego-preview-layer" src="/images/mannequin/default_pants.png" />
                                <img id="clothes-preview" class="lego-preview-layer" src="/images/mannequin/default_torso.png" />
                                <img id="face-preview" class="lego-preview-layer" src="/images/mannequin/default_head.png" />
                                <img id="hair-preview" class="lego-preview-layer" src="" />
                                <img id="accessory1-preview" class="lego-preview-layer  flipped" src="" />
                                <img id="accessory2-preview" class="lego-preview-layer" src="" />
                            </div>
                        </div>
                    </div>
                </div> @if (Model.ProductTypeId == 2)
                {
                    <div class="stage3-main-card mt-4">
                        <h3 class="mt-2">Bộ Lego 2</h3>
                        <div class="row g-3 p-3">
                            <div class="col-md-6">
                                <label asp-for="Lego2.HairId" class="form-label">Tóc (Lego 2)</label>
                                <select asp-for="Lego2.HairId" class="form-select" asp-items="@(new SelectList(hairs, "Id", "Name"))">
                                    <option value="">-- Không chọn --</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Lego2.FaceId" class="form-label">Mặt (Lego 2)</label>
                                <select asp-for="Lego2.FaceId" class="form-select" asp-items="@(new SelectList(faces, "Id", "Name"))">
                                    <option value="">-- Không chọn --</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Lego2.ClothesId" class="form-label">Áo (Lego 2)</label>
                                <select asp-for="Lego2.ClothesId" class="form-select" asp-items="@(new SelectList(clothes, "Id", "Name"))">
                                    <option value="">-- Không chọn --</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Lego2.PantsId" class="form-label">Quần (Lego 2)</label>
                                <select asp-for="Lego2.PantsId" class="form-select" asp-items="@(new SelectList(pants, "Id", "Name"))">
                                    <option value="">-- Không chọn --</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Lego2.Accessory1Id" class="form-label">Phụ kiện 1 (Lego 2)</label>
                                <select asp-for="Lego2.Accessory1Id" class="form-select" asp-items="@(new SelectList(accessories, "Id", "Name"))">
                                    <option value="">-- Không chọn --</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Lego2.Accessory2Id" class="form-label">Phụ kiện 2 (Lego 2)</label>
                                <select asp-for="Lego2.Accessory2Id" class="form-select" asp-items="@(new SelectList(accessories, "Id", "Name"))">
                                    <option value="">-- Không chọn --</option>
                                </select>
                            </div>
                        </div>
                    </div>
                }

                <div class="d-flex justify-content-between my-4" style="max-width: 900px; margin-left: auto; margin-right: auto;">
                    <a asp-action="Stage2_SelectBackground" class="btn btn-nav-secondary">
                        &laquo; Quay lại
                    </a>
                    <button type="submit" class="btn btn-nav-primary">
                        Tiếp tục đến Giai đoạn 4 &raquo;
                    </button>
                </div>
              
            </form>

        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function() {

            // === 1. LẤY CÁC LỚP ẢNH "MANOCANH" ===
            const previewLayers = {
                hair: document.getElementById("hair-preview"),
                face: document.getElementById("face-preview"),
                clothes: document.getElementById("clothes-preview"),
                pants: document.getElementById("pants-preview"),
                accessory1: document.getElementById("accessory1-preview"),
                accessory2: document.getElementById("accessory2-preview")
            };

            // Lấy các ảnh "manocanh" mặc định
            const defaultImages = {
                hair: "", // Tóc mặc định là rỗng (hói)
                face: "/images/mannequin/default_head.png",
                clothes: "/images/mannequin/default_torso.png",
                pants: "/images/mannequin/default_pants.png",
                accessory1: "",
                accessory2: ""
            };

            // === 2. LẤY CÁC Ô HIDDEN INPUT ===
            const hiddenInputs = {
                hair: document.querySelector("input[name='Lego1.HairId']"),
                face: document.querySelector("input[name='Lego1.FaceId']"),
                clothes: document.querySelector("input[name='Lego1.ClothesId']"),
                pants: document.querySelector("input[name='Lego1.PantsId']"),
                accessory1: document.querySelector("input[name='Lego1.Accessory1Id']"),
                accessory2: document.querySelector("input[name='Lego1.Accessory2Id']")
            };

            const gridItems = document.querySelectorAll(".grid-item");

            // === 3. XỬ LÝ KHI NHẤN VÀO MÓN ĐỒ ===
            gridItems.forEach(item => {
                item.addEventListener("click", function() {

                    const id = item.dataset.id;
                    const imageUrl = item.dataset.imageUrl;
                    const part = item.dataset.part; // "hair", "face", "clothes"...

                    // 1. Bỏ chọn (xóa viền xanh) tất cả các món CÙNG LOẠI
                    const itemsInSameGroup = document.querySelectorAll(`.grid-item[data-part='${part}']`);
                    itemsInSameGroup.forEach(i => i.classList.remove("selected"));

                    // 2. Chọn (thêm viền xanh) món vừa nhấn
                    item.classList.add("selected");

                    // 3. Cập nhật ô hidden input
                    if (hiddenInputs[part]) {
                        hiddenInputs[part].value = id;
                    }

                    // 4. Cập nhật ảnh "Manocanh"
                    if (previewLayers[part]) {
                        if (imageUrl) {
                            previewLayers[part].src = imageUrl;
                        } else {
                            // Nếu ảnh rỗng, dùng ảnh mặc định (ví dụ: manocanh)
                            previewLayers[part].src = defaultImages[part];
                        }
                    }
                });
            });

        });
    </script>
}