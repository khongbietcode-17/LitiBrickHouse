@model LitiBrickHouse.ViewModels.OrderBuilderViewModel
@{
    ViewData["Title"] = "Giai đoạn 4: Thông tin Giao hàng";
}

<div class="container stage4-container">
    <div class="row justify-content-center">
        <div class="col-lg-10 text-center">

            <h1 class="stage4-title">Giai đoạn 4: Thông tin Đặt hàng</h1>
            <p class="stage4-subtitle">
                Lưu ý: Bạn hãy nhập thông tin chính xác và đầy đủ để shop đi đơn cho bạn sớm nhất và không sai sót tránh trường hợp hoàn hàng nha!
            </p>

            <div class="stage4-form-container text-start">
                <form asp-action="Stage4_ShippingInfo" method="post">

                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="mb-4">
                        <label asp-for="SocialMediaName" class="form-label stage4-form-label">Tên Intagrams (VD: liti.brickhouse)</label>
                        <input asp-for="SocialMediaName" class="form-control stage4-input" />
                        <span asp-validation-for="SocialMediaName" class="text-danger field-validation-error"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="CustomerName" class="form-label stage4-form-label">Họ và Tên nhận hàng:</label>
                        <input asp-for="CustomerName" class="form-control stage4-input" />
                        <span asp-validation-for="CustomerName" class="text-danger field-validation-error"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="PhoneNumber" class="form-label stage4-form-label">Số điện thoại:</label>
                        <input asp-for="PhoneNumber" class="form-control stage4-input" />
                        <span asp-validation-for="PhoneNumber" class="text-danger field-validation-error"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Address" class="form-label stage4-form-label">Địa chỉ: Tỉnh - Quận/ Huyện - Xã/ Thị Trấn - Địa chỉ cụ thể</label>
                        <input asp-for="Address" class="form-control stage4-input" />
                        <span asp-validation-for="Address" class="text-danger field-validation-error"></span>
                    </div>

                    <div class="d-flex justify-content-between my-5">
                        <a asp-action="Stage3_Customize" class="btn btn-nav-secondary">
                            &laquo; Quay lại
                        </a>
                        <button type="submit" class="btn btn-nav-primary">
                            Tiếp tục đến Giai đoạn 5 &raquo;
                        </button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}