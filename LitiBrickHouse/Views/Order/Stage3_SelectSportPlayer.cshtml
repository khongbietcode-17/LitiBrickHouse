@model LitiBrickHouse.ViewModels.OrderBuilderViewModel
@using LitiBrickHouse.Models
@{
    ViewData["Title"] = "Giai đoạn 3: Chọn Cầu Thủ";
    // Lấy danh sách Cầu thủ đã được lọc từ Controller
    var players = ViewBag.AvailableSportPlayers as List<CustomOption>;
}

<div class="container stage2-container">
    <div class="row justify-content-center">
        <div class="col-lg-10 text-center">

            <h1 class="stage2-title">Giai đoạn 3: Chọn Cầu Thủ</h1>
            <p class="stage2-subtitle">
                Bạn đã chọn Lego Bóng đá. Vui lòng chọn một cầu thủ bên dưới.
            </p>

            <form asp-action="Stage3_SelectSportPlayer" method="post">

                <div class="stage2-main-card">
                    @if (players == null || !players.Any())
                    {
                        <div class="alert alert-warning">
                            Không tìm thấy cầu thủ nào (hoặc đã hết hàng).
                        </div>
                    }
                    else
                    {
                        <div class="row g-3 justify-content-center">
                            @foreach (var player in players)
                            {
                                <div class="col-lg-3 col-md-4 col-6">
                                    <label class="w-100">
                                        <input type="radio" class="visually-hidden-radio"
                                               asp-for="SportPlayerId" value="@player.Id"
                                               id="player-@player.Id" required>

                                        <div class="stage2-item-card">
                                            <img src="@(player.ImageUrl ?? "/images/placeholder.png")" alt="@player.Name" class="stage2-item-card-img">

                                            <div class="stage2-item-card-body">
                                                <h5>@player.Name</h5>
                                                @if (!string.IsNullOrEmpty(player.Size))
                                                {
                                                    <p>Kích thước: @player.Size</p>
                                                }
                                                <p class="price">Giá: +@player.AdditionalPrice.ToString("N0") VNĐ</p>
                                            </div>
                                        </div>
                                    </label>
                                </div>
                            }
                        </div>
                    }
                </div>

                <div class="d-flex justify-content-between my-4" style="max-width: 600px; margin-left: auto; margin-right: auto;">
                    <a asp-action="Stage2_SelectBackground" class="btn btn-nav-secondary">
                        &laquo; Quay lại
                    </a>
                    <button type="submit" class="btn btn-nav-primary"
                            @( (players == null || !players.Any()) ? "disabled" : "" )>
                        Tiếp tục đến Giai đoạn 4 &raquo;
                    </button>
                </div>

            </form>

        </div>
    </div>
</div>