@model LitiBrickHouse.ViewModels.OrderBuilderViewModel
@using LitiBrickHouse.Models 
@{
    ViewData["Title"] = "Giai đoạn 3: Chọn Cầu Thủ";
    // Lấy danh sách Cầu thủ đã được lọc từ Controller
    var players = ViewBag.AvailableSportPlayers as List<CustomOption>;
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">

            <h1 class="my-4 text-center">Giai đoạn 3: Chọn Cầu Thủ</h1>
            <p class="lead text-center">Bạn đã chọn Lego Bóng đá. Vui lòng chọn một cầu thủ bên dưới.</p>
            <hr />

            <form asp-action="Stage3_SelectSportPlayer" method="post">
                
                @if (players == null || !players.Any())
                {
                    <div class="alert alert-warning">
                        Không tìm thấy cầu thủ nào (hoặc đã hết hàng).
                        Vui lòng liên hệ Admin để thêm sản phẩm.
                    </div>
                }
                else
                {
                    <div class="row g-3">
                        @foreach (var player in players)
                        {
                            <div class="col-md-3 col-6">
                                <div class="card h-100">
                                    <img src="@(player.ImageUrl ?? "/images/placeholder.png")" class="card-img-top img-fluid" alt="@player.Name" style="aspect-ratio: 1 / 1; object-fit: cover;">
                                    
                                    <div class="card-body text-center d-flex flex-column">
                                        <h5 class="card-title fs-6">@player.Name</h5>
                                        <p class="text-danger small">
                                            + @player.AdditionalPrice.ToString("N0") VNĐ
                                        </p>
                                        
                                        <div class="mt-auto">
                                            <input type="radio" class="form-check-input" 
                                                   asp-for="SportPlayerId" value="@player.Id" 
                                                   id="player-@player.Id" required
                                                  >
                                            <label class="form-check-label" for="player-@player.Id">Chọn</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                
                <div class="d-flex justify-content-between my-4">
                    <a asp-action="Stage2_SelectBackground" class="btn btn-outline-secondary">
                        &laquo; Quay lại
                    </a>
                    <button type="submit" class="btn btn-primary" 
                        @( (players == null || !players.Any()) ? "disabled" : "" )>
                        Tiếp tục đến Giai đoạn 4 &raquo;
                    </button>
                </div>

            </form>

        </div>
    </div>
</div>