@model LitiBrickHouse.ViewModels.OrderBuilderViewModel
@using LitiBrickHouse.Models 
@{
    ViewData["Title"] = "Giai đoạn 2: Chọn Background";
    // Lấy danh sách Background đã được lọc từ Controller
    var backgrounds = ViewBag.AvailableBackgrounds as List<CustomOption>;
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">

            <h1 class="my-4 text-center">Giai đoạn 2: Chọn Background & Ghi Chú</h1>
            <hr />

            <form asp-action="Stage2_SelectBackground" method="post">
                
                <h4>Chọn một Background</h4>
                
                @if (backgrounds == null || !backgrounds.Any())
                {
                    <div class="alert alert-warning">
                        Không tìm thấy background nào phù hợp (hoặc đã hết hàng).
                        Vui lòng liên hệ Admin để thêm sản phẩm.
                    </div>
                }
                else
                {
                    <div class="row g-3">
                        @foreach (var bg in backgrounds)
                        {
                            <div class="col-md-4 col-6">
                                <div class="card h-100">
                                    <img src="@(bg.ImageUrl ?? "/images/placeholder.png")" class="card-img-top img-fluid" alt="@bg.Name" style="aspect-ratio: 1 / 1; object-fit: cover;">
                                    
                                    <div class="card-body text-center d-flex flex-column">
                                        <h5 class="card-title fs-6">@bg.Name</h5>
                                        <p class="text-danger small">
                                            + @bg.AdditionalPrice.ToString("N0") VNĐ
                                        </p>
                                        
                                        <div class="mt-auto">
                                            <input type="radio" class="form-check-input" 
                                                   asp-for="BackgroundId" value="@bg.Id" 
                                                   id="bg-@bg.Id" required />
                                                  
                                            <label class="form-check-label" for="bg-@bg.Id">Chọn</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                
                <hr class="my-4" />

                <div class="mb-3">
                    <label asp-for="CustomerNote" class="form-label">Ghi chú (nếu có):</label>
                    <textarea asp-for="CustomerNote" class="form-control" rows="3"></textarea>
                </div>

                <div class="d-flex justify-content-between my-4">
                    <a asp-action="Stage1_SelectType" class="btn btn-outline-secondary">
                        &laquo; Quay lại
                    </a>
                    <button type="submit" class="btn btn-primary" 
                        @( (backgrounds == null || !backgrounds.Any()) ? "disabled" : "" )>
                        Tiếp tục đến Giai đoạn 3 &raquo;
                    </button>
                </div>

            </form>

        </div>
    </div>
</div>