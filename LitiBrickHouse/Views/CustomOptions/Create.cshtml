@model LitiBrickHouse.Models.CustomOption
@using LitiBrickHouse.Enums

@{
    ViewData["Title"] = "Thêm Phụ Kiện Mới";
}

<div class="row justify-content-center">
    <div class="col-md-10 col-lg-8">
        <div class="card shadow-sm border-0 mt-4" style="border-radius: 15px;">
            
            <div class="card-header bg-white border-bottom py-3">
                <h4 class="text-primary mb-0 fw-bold text-center" style="color: #E6007E !important;">
                    <i class="fas fa-plus-circle me-2"></i>TẠO PHỤ KIỆN MỚI
                </h4>
            </div>

            <div class="card-body p-4">
                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-4">
                        <label asp-for="Name" class="form-label fw-bold text-dark">Tên Phụ kiện <span class="text-danger">*</span></label>
                        <input asp-for="Name" class="form-control form-control-lg" placeholder="Nhập tên phụ kiện (ví dụ: Tóc xù, Áo vest...)" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="OptionCategoryId" class="form-label fw-bold text-dark">Danh mục</label>
                            <select asp-for="OptionCategoryId" class="form-select" asp-items="ViewBag.OptionCategoryId">
                                <option value="">-- Chọn Danh mục --</option>
                            </select>
                            <span asp-validation-for="OptionCategoryId" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Gender" class="form-label fw-bold text-dark">Giới tính / Loại</label>
                            <select asp-for="Gender" asp-items="Html.GetEnumSelectList<GenderType>()" class="form-select"></select>
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="AdditionalPrice" class="form-label fw-bold text-dark">Giá thêm (VNĐ)</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light">₫</span>
                                <input asp-for="AdditionalPrice" class="form-control" type="number" />
                            </div>
                            <span asp-validation-for="AdditionalPrice" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Quantity" class="form-label fw-bold text-dark">Số lượng kho</label>
                            <input asp-for="Quantity" class="form-control" type="number" />
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Size" class="form-label fw-bold text-dark">Kích thước dành cho phụ kiện backgourd (Tùy chọn)</label>
                        <input asp-for="Size" class="form-control" placeholder="Ví dụ: 21x15 cm" />
                        <span asp-validation-for="Size" class="text-danger"></span>
                    </div>

                    <hr class="my-4 text-muted">

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <label class="form-label fw-bold text-primary">Ảnh Chính (Đại diện)</label>
                            <input type="file" name="fImage" class="form-control" accept="image/*" onchange="previewImage(this, 'mainPreview')" />
                            
                            <div class="mt-3 text-center border rounded bg-light d-flex align-items-center justify-content-center" style="height: 200px; overflow: hidden;">
                                <img id="mainPreview" src="#" alt="Xem trước ảnh chính" style="max-height: 100%; max-width: 100%; display: none;" />
                                <span class="text-muted small" id="mainPlaceholder">Chưa chọn ảnh</span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-bold text-secondary">Ảnh Nhỏ (Thumbnail)</label>
                            <input type="file" name="fThumb" class="form-control" accept="image/*" onchange="previewImage(this, 'thumbPreview')" />
                            <div class="form-text">Nếu bỏ trống, hệ thống sẽ dùng ảnh chính.</div>

                            <div class="mt-2 text-center border rounded bg-light d-flex align-items-center justify-content-center" style="height: 150px; width: 15