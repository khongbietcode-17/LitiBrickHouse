@{
    ViewData["Title"] = "Trang Chủ";
}

<div class="container-full-width">

    <section class="hero-section-light">
        <div class="hero-landscape-container">
            <img src="/images/homepage/banner.png"
                 alt="Liti Brick House Landscape"
                 class="hero-landscape-image" />
            <a asp-controller="Order" asp-action="StartNewOrder" class="cta-button-light">
                Bắt đầu đặt hàng !
            </a>
        </div>
    </section>

    <section class="story-section">
        <div class="container" style="max-width: 1200px;">
            <div class="row align-items-center g-5">
                <div class="col-lg-6">
                    <div class="story-image-container">
                        <img src="/images/homepage/story_image.jpg" alt="Câu chuyện Liti Brick" class="story-image" />
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="story-content">
                        <p class="story-label">VỀ CHÚNG TÔI</p>
                        <h2 class="story-title">Đây là shop khung ảnh nhân vật đồ chơi custom</h2>
                        <p class="story-text">
                            Chúng tôi tin rằng, món quà thú vị và cá nhân hóa này có thể làm nên một món quà bất ngờ để bạn dành tặng cho người thân, bạn bè.
                            <br><br>
                            Liti Brick House sẽ giúp bạn tạo nên một khung ảnh độc đáo riêng biệt kỹ niệm từng những mãnh gạch nhỏ.
                        </p>
                        <a href="#" class="story-link">Đọc thêm về chúng tôi</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="feedback-section">
        <div class="container" style="max-width: 1200px;">
            <h2 class="feedback-title">Feedback Khách Hàng</h2>
            <p class="feedback-subtitle">Feedback của khách nhà shop nè</p>

            <div class="row g-4">
                <div class="col-md-6 col-lg-3">
                    <div class="feedback-card">
                        <img src="/images/homepage/1.png" alt="Feedback 1" class="feedback-image" />
                    </div>
                </div>
                <div class="col-md-6 col-lg-3">
                    <div class="feedback-card">
                        <img src="/images/homepage/2.png" alt="Feedback 2" class="feedback-image" />
                    </div>
                </div>
                <div class="col-md-6 col-lg-3">
                    <div class="feedback-card">
                        <img src="/images/homepage/3.png" alt="Feedback 3" class="feedback-image" />
                    </div>
                </div>
                <div class="col-md-6 col-lg-3">
                    <div class="feedback-card">
                        <img src="/images/homepage/4.png" alt="Feedback 4" class="feedback-image" />
                    </div>
                </div>
                <a href="#" class="story-link">Xem thêm feedback khách hàng</a>
            </div>
        </div>
    </section>

    

</div>