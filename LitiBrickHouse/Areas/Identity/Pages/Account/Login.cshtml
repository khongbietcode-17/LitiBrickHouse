@page
@model LoginModel

@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="container">
    <div class="row login-container">

        <div class="col-md-6 login-left-col d-none d-md-flex">
            <img src="/images/homepage/logo.png" alt="Liti Logo" class="login-logo img-fluid" />

            <h2 class="welcome-text">Welcome Admin !</h2>
        </div>

        <div class="col-md-6 login-right-col">
            <h2 class="login-title">ĐĂNG NHẬP</h2>
            <p class="login-subtitle">
                Đăng nhập chỉ dành cho admin, quý khách vui lòng không đăng nhập nhé !
            </p>

            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="login-input-group">
                    <i class="fas fa-user input-icon"></i>
                    <input asp-for="Input.Email" class="login-input" placeholder="Username / Email" />
                    <span asp-validation-for="Input.Email" class="text-danger small ms-3"></span>
                </div>

                <div class="login-input-group">
                    <i class="fas fa-lock input-icon"></i>
                    <input asp-for="Input.Password" class="login-input" placeholder="Password" />
                    <span asp-validation-for="Input.Password" class="text-danger small ms-3"></span>
                </div>

                <button id="login-submit" type="submit" class="btn-login-pink">Vô việc</button>

                <div class="divider-text">Or</div>

                <a href="/" class="btn-signup-light">Tôi là khách hàng</a>

            </form>
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}